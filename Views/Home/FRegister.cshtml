@using ContactProject.Repositories
@model RegisterVM
@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="container mt-5" style="border: 1px solid #ccc; width: 70%;padding:20px">
    <h3>Register</h3>
    <form enctype="multipart/form-data" asp-controller="Home" asp-action="FRegister" method="post">
        <div class="mt-3">
            <label class="control-label mt-1" for="name">Name:</label>
            <div class="mt-1">
                <input type="text" class="form-control" asp-for="Name" id="name" placeholder="Enter name">
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mt-3">
            <label class="control-label mt-1" for="email">Email:</label>
            <div class="mt-1">
                <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Enter email">
            </div>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="mt-3">
            <label class="control-label mt-1" for="pwd">Password:</label>
            <div class="mt-1">
                <input type="password" class="form-control" asp-for="Password" id="pwd" placeholder="Enter password">
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div id="responseMessage" class="mt-3">
            @TempData["SuccessMessage"]
        </div>
        <div class="mt-3">
            <div class="mt-1">
                <button type="submit" class="btn btn-primary" id="register">Register</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
